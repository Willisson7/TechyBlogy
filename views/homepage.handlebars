<!-- Loop over each object in the article array -->
{{#each articles as |article| }}
<div class="row mb-4 article">
  <div class="col-md-5">
    <h2>  
      <a href="/article/{{article.id}}">{{article.username}}</a>
    </h2>
    <p>
    </p>
    <p>Created by {{article.user.username}} on {{format_date article.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{article.description}}
    </p>
  </div>
</div>
{{/each}}
